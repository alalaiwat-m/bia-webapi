<div class="jumbotron">
    <h3>LOGIN</h3>
    @using (Html.BeginForm("Index", "Login", FormMethod.Post, new Dictionary<string, object> {{"id", "frmLogin"}}))
    {
        <div class="row">
            <div class="col-sm-5">
                <div class="login-box">
                    <div class="form-horizontal">
                        <div class="form-group">
                            <div class="col-sm-12">
                                <input type="text" name="txtUserName" value=""/>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-12">
                                <input type="text" name="txtPassword" value=""/>
                            </div>
                        </div>
                    </div>
                    <button id='btnLogin' type="button" value="LOGIN" title="LOGIN" onclick="return checkLoginValidation($(this));" class="btn btn-primary" tabindex="4">LOGIN</button>
                </div>
            </div>
        </div>
    }
</div>